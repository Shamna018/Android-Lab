<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Facebook Page"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:layout_below="@id/tv1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/s1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-100dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pic1" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c1"
        android:layout_centerHorizontal="true"
        android:text="Shamna"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="122dp"
        android:layout_height="105dp"
        android:layout_below="@id/textView"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            app:srcCompat="@drawable/profile" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="126dp"
            android:layout_height="85dp"
            android:layout_marginLeft="40dp"
            android:text="Profile"
            android:textColor="#03A9F4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="122dp"
        android:layout_height="105dp"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/l1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            app:srcCompat="@drawable/home" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="126dp"
            android:layout_height="85dp"
            android:layout_marginLeft="43dp"
            android:text="Home"
            android:textColor="#03A9F4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="122dp"
        android:layout_height="105dp"
        android:layout_below="@id/textView"
        android:layout_toRightOf="@id/l2"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="126dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/message" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:text="Chat"
            android:textColor="#03A9F4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_below="@id/l1"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Lives in Calicut,india"
            android:textSize="24sp">
        </TextView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Studies at Kmct College,Calicut"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="... See Your About Info"
            android:textSize="24sp"/>
    </LinearLayout>


</RelativeLayout>